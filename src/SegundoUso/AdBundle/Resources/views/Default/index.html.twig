{% extends 'SegundoUsoFrontendBundle::layout.html.twig' %}

{% block content %}
    <div class="row list" id="FLAG_ads-list">

        <div class="col-md-12"><h1>Anuncios publicados</h1></div>

        {% for ad in ads %}
        <div class="col-md-12 ad">
            <div class="row">
                <div class="col-md-8">
                    <h2>{{ ad.title }} ({{ ad.location }})</h2>
                    <span class="date">Publicado el {{ ad.createdAt | date('m/d/Y') }}</span>
                </div>
                <div class="col-md-2 col-md-pull-2"><a href="{{ path('segundo_uso_frontend_ad_show', {pid: ad.pid}) }}" class="btn btn-primary">Más información</a></div>
            </div>
        </div>
        {% else %}
            <div class="alert alert-warning">
            {% if category %}
                No hay anuncios publicados en la categoría {{ category.name }}.
            {% else %}
                No hay anuncios publicados.
            {% endif %}
            </div>
        {% endfor %}
    </div>

{% endblock content %}