{% extends 'SegundoUsoFrontendBundle:Admin:layout.html.twig' %}

{% block content -%}

    <a href="{{ path('admin_category_new') }}" class="btn btn-primary btn-bg pull-right">
        Create a new category
    </a>

    <h1>Category list</h1>


    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Createdat</th>
                <th>Updatedat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_category_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.updatedAt %}{{ entity.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <div class="btn-group">
                        <a href="{{ path('admin_category_show', { 'id': entity.id }) }}" class="btn btn-default btn-sm">show</a>
                        <a href="{{ path('admin_category_edit', { 'id': entity.id }) }}" class="btn btn-default btn-sm">edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    {% endblock %}
